# Application Configuration
APP_NAME=Real Estate Voice AI
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/voiceai

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Exotel Configuration (Indian Telephony Provider)
EXOTEL_ACCOUNT_SID=your_account_sid_here
EXOTEL_API_KEY=your_api_key_here
EXOTEL_API_TOKEN=your_api_token_here
EXOTEL_VIRTUAL_NUMBER=080XXXXXXXX
EXOTEL_EXOPHLO_ID=your_exophlo_id_here

# Server Base URL (for webhooks and WebSocket)
OUR_BASE_URL=http://localhost:8000  # Update with ngrok URL or your domain

# AI Services Configuration

# Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# OpenAI (GPT-4o-mini for conversation)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id_here

# WebSocket Configuration
WEBSOCKET_ENDPOINT_PATH=/media

# Call Settings
MAX_CALL_DURATION_MINUTES=10
CALLING_HOURS_START=10
CALLING_HOURS_END=19
MAX_CONCURRENT_CALLS=10

# Email Configuration (for lead monitoring)
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_POLL_INTERVAL_SECONDS=30
EMAIL_FOLDER=INBOX
EMAIL_MARK_AS_READ=true
EMAIL_LEADS_AUTO_CALL=true
EMAIL_LEADS_MAX_RETRY_ATTEMPTS=3
EMAIL_LEADS_RETRY_DELAY_HOURS=2
EMAIL_LEADS_DEFAULT_CAMPAIGN_NAME=Email Leads - Auto
